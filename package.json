{
  "name": "vue-ccard",
  "version": "1.1.0",
  "description": "A Vue.js component that displays a reactive credit card preview for payment forms.",
  "keywords": [
    "vue",
    "vue3",
    "vue2",
    "credit-card",
    "card",
    "payment",
    "form",
    "component",
    "reactive",
    "preview",
    "typescript"
  ],
  "homepage": "https://hildorjr.github.io/vue-ccard",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hildorjr/vue-ccard.git"
  },
  "bugs": {
    "url": "https://github.com/hildorjr/vue-ccard/issues"
  },
  "author": {
    "name": "Hildor Junior",
    "url": "https://hildor.dev"
  },
  "license": "MIT",
  "main": "dist/vue-ccard.umd.js",
  "module": "dist/vue-ccard.esm.js",
  "unpkg": "dist/vue-ccard.min.js",
  "types": "src/vue-ccard.d.ts",
  "exports": {
    ".": {
      "types": "./src/vue-ccard.d.ts",
      "import": "./dist/vue-ccard.esm.js",
      "require": "./dist/vue-ccard.umd.js"
    },
    "./sfc": "./src/vue-ccard.vue"
  },
  "browser": {
    "./sfc": "src/vue-ccard.vue"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
    "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/vue-ccard.umd.js",
    "build:es": "rollup --config build/rollup.config.js --format es --file dist/vue-ccard.esm.js",
    "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/vue-ccard.min.js",
    "demo": "npm --prefix demo run dev",
    "demo:build": "npm --prefix demo run build"
  },
  "peerDependencies": {
    "vue": "^2.6.0 || ^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-vue": "^9.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "vue": "^3.3.0"
  }
}
